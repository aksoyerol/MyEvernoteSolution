@model MyEvernote.WebApp.Views.NotifyViews.OkView
@using MyEvernote.WebApp.Views.NotifyViews


@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>

    <div class="align-middle mt-5">
        <div class="card text-center ">
            <div class="card-header">
                @Model.Header
            </div>
            <div class="card-body">
                <h5 class="card-title fa fa-3x fa-warning">@Model.Header</h5>
                <p class="card-text">
                    @foreach (string msg in Model.Items)
                    {
                        @msg<br/>
                    }

                </p>
                <a href="@Model.RedirectingUrl" class="btn btn-primary">@Model.Title</a>
            </div>
            
        </div>

    </div>


</section>


@if(Model.IsRedirect == true) {
<script>
    $(function () {
        setTimeout(function () {
                window.Location.href = @Model.RedirectingUrl;
            },
            @Model.RedirectingTime);
    });
    
</script>
}