<!DOCTYPE html>
@using MyEvernote.Entities.ValueObjects
@model LoginViewModel
@{
     Layout = "~/Views/Shared/_Layout2.cshtml";

}
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <span class="fa fa-4x fa-user-plus p-2"></span>
            </div>
            @using (Html.BeginForm())
            {
                <!-- Login Form -->
                <form>
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adını Giriniz.", @name = "username" })
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-text", @placeholder = "Şifrenizi Giriniz" , @type="password"})
                    <input type="submit" class="fadeIn fourth" value="Log In">
                </form>
            }
            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" href="#">Forgot Password?</a>
            </div>

        </div>
    </div>


