<!DOCTYPE html>
@using MyEvernote.Entities.ValueObjects
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@*@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adını Giriniz.", @name = "username" })
    @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-text", @placeholder = "Şifrenizi Giriniz" , @type="password"})*@
<!-- Material form login -->

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
         
             @using (Html.BeginForm()) {



                     <form class="">
                <span class="login100-form-title p-b-20">
                    Welcome
                </span>
                         <span class="login100-form-avatar">
                             <img src="~/Content/LoginStyle/images/avatar-01.jpg" alt="AVATAR">
                         </span>
                         @if (ViewBag.HataGoster == 1)
                         {
                             <div class="alert alert-danger mt-3" role="alert">
                                 @Html.ValidationSummary(false)
                             </div>
                         }
                         
                         
                         @if (ViewBag.SetLink != null)
                         {
                         <a href="@ViewBag.SetLink">
                             <div class="alert alert-info" role="alert">
                                 Aktivasyon Yap
                             </div>
                         </a>
                         }
                         <div class="wrap-input100 validate-input m-t-5 m-b-20" data-validate="Enter username">
                    <span class="focus-input100" placeholder="Username"></span>
                    @Html.TextBoxFor(model => model.UserName, new { @class = "input100", type = "text", name = "username" })
                    @*<input class="input100" type="text" name="username">*@






                </div>

                <div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
                    <span class="focus-input100" placeholder="Password"></span>
                    @Html.TextBoxFor(model => model.Password, new { @class = "input100", type = "password", name = "pass" })
                    @*<input class="input100" type="password" name="pass">*@

                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Login
                    </button>
                </div>


                         
            </form>
             }
         
        </div>
    </div>
</div>
	

<div id="dropDownSelect1"></div>